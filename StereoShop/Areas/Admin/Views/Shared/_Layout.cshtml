<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <script href="~/lib/jquery/jquery.min.js"></script>
    <script href="~/lib/popper.js/popper.min.js"></script>
    <script href="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="navbar-nav mr-auto">
            <li>
                <a class="navbar-brand" asp-area="Shop" asp-controller="Home" asp-action="Index">Ian's Stereo Shop</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="AdminList">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="List">Categories</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="Shop" asp-controller="Home" asp-action="Index">View Site</a>
            </li>
        </ul>
    </nav>
    <div class="main-div">
        @RenderBody()
    </div>

    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - Ian Van Harten</p>
    </footer>
</body>
</html>
