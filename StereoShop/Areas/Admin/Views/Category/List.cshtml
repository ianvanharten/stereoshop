@model List<Category>
@{
    ViewBag.Title = "Category Manager";
}

<h1>@ViewBag.Title</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>@category.Name</td>
            <td>
                <a asp-action="Update" asp-route-id="@category.CategoryId">
                    Update
                </a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@category.CategoryId">
                    Delete
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-action="Add" class="btn btn-dark">Add New Category</a>
